<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.project.subscriptionservice.dao.mapper.SubPlanDaoMapper">
    <resultMap id="subscribe" type="org.project.subscriptionservice.bean.SubscriptionPlanEntity">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="planRef" column="plan_ref"/>
        <result property="description" column="description"/>
        <result property="price" column="price"/>
        <result property="currency" column="currency"/>
        <result property="billingCycle" column="billing_cycle"/>

        <collection property="subscriptions" ofType="org.project.subscriptionservice.bean.SubscriptionEntity">
            <id property="id" column="id"/>
            <result property="planId" column="plan_id"/>
            <result property="status" column="status"/>
            <result property="planStart" column="plan_start"/>
            <result property="planEnd" column="plan_end"/>
            <collection property="members" ofType="org.project.subscriptionservice.bean.SubscriptionMemberEntity">
                <id property="id" column="id"/>
                <result property="userId" column="user_id"/>
                <result property="subscriptionId" column="subscription_id"/>
                <association property="user" javaType="org.project.subscriptionservice.bean.UserEntity">
                    <id property="id" column="id"/>
                    <result property="username" column="us_username"/>
                    <result property="email" column="us_email"/>
                    <result property="phone" column="us_phone"/>
                    <result property="job" column="us_job"/>
                    <result property="locked" column="us_locked"/>
                    <result property="active" column="us_active"/>
                    <result property="inviteCode" column="us_invite_code"/>
                    <result property="inviteBy" column="us_invite_by"/>
                    <result property="createdBy" column="us_created_by"/>
                    <result property="updatedBy" column="us_updated_by"/>
                </association>
            </collection>
        </collection>
    </resultMap>

    <select id="findSubPlan" resultMap="subscribe" parameterType="int">
        select sp.*, sub.*, subm.*, us.*
        from SUBPLANS sp
                 left join SUBSCRIPTION sub on sub.PLAN_ID = sp.ID
                 left join SUBSCRIPTION_MEMBER subm on subm.SUBSCRIPTION_ID = sub.ID
                 left join USERS us on subm.USER_ID = us.ID
        where sp.ID = #{id}
    </select>
</mapper>